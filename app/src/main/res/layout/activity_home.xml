<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:background="@drawable/bck"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bck" />

    <TextView
        android:id="@+id/Text"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/myImageView"
        android:layout_alignRight="@id/myImageView"
        android:layout_alignBottom="@+id/myImageView"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:text="HealthCare"
        android:textColor="#E74C3C"
        android:textSize="50dp" />

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/Text"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/ambulance"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/ambu" />

        <Button
            android:id="@+id/pills"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/pills1" />

        <Button
            android:id="@+id/nearme"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/hospital" />

        <Button
            android:id="@+id/aboutus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/about1" />

    </GridLayout>

    <TextView
        android:id="@+id/footer"
        android:layout_below="@+id/grid"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:text="Developed by  CarLMama Ltd. \n 2019-2020"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
